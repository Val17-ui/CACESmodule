{
  "name": "easycertif",
  "private": true,
  "version": "0.0.0",
  "description": "eval'active - Application de bureau qui permet la création, la gestion et l'importation de fichiers ORS (fichiers de sessions interactives au format PowerPoint enrichi), destinée à être utilisée avec des boîtiers de vote avec importation, analyse et reporting des résultats",
  "author": "Altern'active Systems <info@alternactive-systems.fr",
  "type": "module",
  "main": "dist-electron/electron/index.js",
  "scripts": {
    "clean-electron": "rimraf dist-electron",
    "compile-electron": "echo 'Compilation handled by Vite' && exit 0",
    "dev": "vite build && electron .",
    "electron-watch": "npm run clean-electron && wait-on tcp:5173 -t 30000 && vite build --config vite.config.ts && electron .",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "build": "npm run clean-electron && vite build && electron-builder",
    "electron-dev": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run build && electron ."
  },
  "build": {
    "appId": "com.easycertif.app",
    "productName": "EasyCertif",
    "files": [
      "dist/renderer/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/icon.ico"
    },
    "npmRebuild": true
  },
  "dependencies": {
    "@types/jspdf": "^1.3.3",
    "better-sqlite3": "^12.2.0",
    "date-fns": "^3.3.1",
    "exceljs": "^4.4.0",
    "fast-xml-parser": "^5.2.5",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "image-size": "^1.2.1",
    "jspdf": "^3.0.1",
    "jszip": "^3.10.1",
    "lucide-react": "^0.344.0",
    "node-cron": "^4.2.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "ts-node": "^10.9.2",
    "xlsx": "^0.18.5",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@eslint/js": "^9.9.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^24.1.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "depcheck": "^1.4.7",
    "electron": "^37.2.4",
    "electron-builder": "^24.9.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "rollup-plugin-analyzer": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^7.0.1"
  }
}
