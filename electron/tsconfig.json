{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "../dist-electron/electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@electron/*": ["./*"],
      "@types/*": ["../src/types/*"],
      "@src/*": ["../src/*"]
    },
    "rootDir": "../", // Change de "." Ã  "../" pour inclure src/
    "lib": ["es2022", "dom"],
    "types": ["node", "electron", "better-sqlite3"]
  },
  "include": ["./**/*.ts", "../src/types/**/*.ts", "./global.d.ts"],
  "exclude": ["node_modules", "dist", "dist-electron"]
}